{
  "extends": [
    "next/core-web-vitals",
    "airbnb",
    "airbnb-typescript",
    "airbnb/hooks",
    "prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "sort-imports": [
      "error",
      { "allowSeparatedGroups": true, "ignoreCase": true }
    ],
    "implicit-arrow-linebreak": "off"
  }
}
